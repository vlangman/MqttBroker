{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "kGatewaySchema.json",
    "type": "object",
    "title": "kGateway Root Schema",
    "description": "Schema defining kGateway stucture",
    "default": {},
    "additionalProperties": false,
    "definitions": {
        "GatewaySeqNo": {
            "$id": "#/properties/GatewaySeqNo",
            "type": "integer",
            "title": "The GatewaySeqNo Schema",
            "description": "The kGateway primary key",
            "default": "Null",
            "examples": [
                "1"
            ]
        },
        "MacAddress": {
            "$id": "#/properties/MacAddress",
            "type": "string",
            "title": "The BeaconMac Schema",
            "description": "The kGateway Mac Address as string with or without colons (:)",
            "default": "Null",
            "examples": [
                "D0:33:04:00:33:02",
                "D03304003302"
            ],
            "pattern": "^([0-9a-fA-F][0-9a-fA-F]){6}$"
        },
        "GatewayName":{
            "$id": "#/properties/GatewayName",
            "type": "string",
            "title": "The GatewayName Schema",
            "description": "The Name of a beacon",
            "default": "Null",
            "examples": [
                "GatewayName"
            ]
        }
        
    }
}
